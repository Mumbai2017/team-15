<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.sakhi.NGODash">

    <TextView
        android:id="@+id/tvCheckOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleButtonStatus"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:text="TextView" />

    <Button
        android:id="@+id/bViewOrders"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bRequestFromNGO"
        android:layout_below="@+id/toggleButtonStatus"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Check Orders" />

    <Button
        android:id="@+id/bViewSakhi"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bFeedback"
        android:layout_below="@+id/bCheckOrder"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="View Sakhis" />

    <Button
        android:id="@+id/bGenerateReport"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bRequestFromNGO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Generate Report" />


    <Button
        android:id="@+id/bBroadcasrtToAllSakhis"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bRequestFromNGO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Broadcast to Sakhis" />

</RelativeLayout>
